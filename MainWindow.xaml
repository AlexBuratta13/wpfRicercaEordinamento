<Window x:Class="wpfRicercaEordinamento.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfRicercaEordinamento"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="661.444">
    <Grid>
        <TextBox x:Name="txt_nome" HorizontalAlignment="Left" Height="35" Margin="89,129,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" BorderBrush="#FF0C0C0C"/>
        <Label Content="Inserisci il tuo nome&#xD;&#xA;e cognome" HorizontalAlignment="Left" Height="46" Margin="89,46,0,0" VerticalAlignment="Top" Width="194" FontWeight="Bold" FontSize="14"/>
        <Button x:Name="btn_salva" Content="SALVA" HorizontalAlignment="Left" Height="35" Margin="89,282,0,0" VerticalAlignment="Top" Width="194" FontSize="24" FontWeight="Bold" Click="btn_salva_Click"/>
        <TextBox x:Name="txtRis" HorizontalAlignment="Left" Height="209" Margin="426,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" IsReadOnly="True" BorderBrush="#FF0C0C0C"/>
        <Button x:Name="btn_inserisci" Content="INSERISCI" HorizontalAlignment="Left" Height="35" Margin="89,207,0,0" VerticalAlignment="Top" Width="194" FontSize="24" FontWeight="Bold" Click="btn_inserisci_Click"/>

    </Grid>
</Window>
